#include <bits/stdc++.h>
using namespace std;

void swap(vector<int>& a, int i, int j){
    int temp = a[i-1];
    a[i-1] = a[j-1];
    a[j-1] = temp;
}

int query(vector<int> a, int l, int r){
    int countBalls = 0;
    for(int i = l-1; i < r; i++){
        if(a[i]) ++countBalls;
    }
    return countBalls;
}

void print(vector<int> a){
    cout << endl;
    for(int x:a)
        cout << x <<' ';
    cout << endl;
}

int main(){
    //int n = 3, m = 1, s= 3, q= 2;
    //vector<int> a(n, 0);
    //a[1] = 1;
    //print(a);
    //swap(a, 1, 2);
    //swap(a, 1, 3);
    //swap(a, 3, 1);
    //print(a);
    //cout << query(a, 1, 2);
    //cout << ' ';
    //cout << query(a, 1, 3);
    int n, m, s, q;
    cin >> n >> m >> s >> q;    
    vector<int> M;
    vector<int> a(n, 0);

    for(int i = 0; i < m; i++){
        int temp; cin >> temp;
        M.push_back(temp);
    }

    for(int i = 0; i < s; i++){
        int x, y; 
        cin >> x >> y;
        swap(a, x, y);
    }

    for(int i = 0; i < q; i++){
        int l, r; 
        cin >> l >> r;
        cout << query(a, l, r) << ' ';
    }
}
